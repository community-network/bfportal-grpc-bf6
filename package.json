  },
  "homepage": "https://gametools.network/",
  "dependencies": {
    "long": "^5.3.2",
    "nice-grpc-web": "^3.3.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/google-protobuf": "^3.15.12",
    "@types/jest": "^30.0.0",
