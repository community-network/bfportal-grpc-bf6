    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "grpc-tools": "^1.13.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "pinst": "^3.0.0",
    "prettier": "^3.6.2",
    "protobufjs": "^7.5.4",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-proto": "^2.8.3",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
